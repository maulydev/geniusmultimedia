---
import { Icon } from 'astro-icon'

const navlinks = ['Home', 'About', 'Projects', 'Contact']
---

<header class="fixed top-0 inset-x-0 p-4 bg-white shadow z-50">
    <div class="container mx-auto flex justify-between">
        <a class="font-black text-2xl text-slate-900 flex gap-1" href="/">GENIUS <span class="hidden sm:block">MULTIMEDIA</span> </a>
        <nav class="hidden md:block">
            <ul class="flex gap-8">
                {
                    navlinks.map(link => {
                        return (
                            <li>
                                <a href={`#${link}`}>{link}</a>
                            </li>
                        )
                    })
                }
            </ul>
        </nav>
        <div class="bg-slate-200 text-slate-900 w-[2rem] p-1 rounded-full md:hidden">
            <Icon name="mdi:menu" />
        </div>
    </div>
</header>