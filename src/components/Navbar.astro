---
const navlinks = ['Home', 'About', 'Projects', 'Contact']
---

<header class="md:fixed md:top-0 inset-x-0 p-4 bg-white shadow z-50">
    <div class="container mx-auto flex justify-between">
        <a class="font-black text-2xl mx-auto md:mx-0 text-slate-900 flex gap-1" href="/">GENIUS MULTIMEDIA</a>
        <nav class="hidden md:block">
            <ul class="flex gap-8">
                {
                    navlinks.map(link => {
                        return (
                            <li>
                                <a href={`#${link}`} class="relative group hover:text-blue-700">
                                    {link}
                                    <div class="absolute w-full mt-1 h-0.5 bg-blue-700 scale-x-0 group-hover:scale-x-75 transition-transform duration-500"></div>
                                </a>
                            </li>
                        )
                    })
                }
            </ul>
        </nav>
        <!-- <div class="bg-slate-200 text-slate-900 w-[2rem] p-1 rounded-full md:hidden">
            <Icon name="mdi:menu" />
        </div> -->
    </div>
</header>